<header class="shadow sticky top-0 bg-white z-10">
  <div class="mx-auto max-w-screen-lg px-4 pt-6 pb-2 sm:px-6 lg:px-8 flex justify-between">
    <div>
      <nav aria-label="Breadcrumb" class="mb-1">
        <ol role="list" class="mx-auto flex max-w-2xl items-center space-x-2  lg:max-w-screen-lg ">
          <li>
            <div class="flex items-center -ml-3">
              <svg width="15" height="15" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M8.84182 3.13514C9.04327 3.32401 9.05348 3.64042 8.86462 3.84188L5.43521 7.49991L8.86462 11.1579C9.05348 11.3594 9.04327 11.6758 8.84182 11.8647C8.64036 12.0535 8.32394 12.0433 8.13508 11.8419L4.38508 7.84188C4.20477 7.64955 4.20477 7.35027 4.38508 7.15794L8.13508 3.15794C8.32394 2.95648 8.64036 2.94628 8.84182 3.13514Z" fill="currentColor" fill-rule="evenodd" clip-rule="evenodd"></path></svg>
              <%%= link_to <%= index_helper %>_path, class:'mr-2 text-sm font-medium text-green-600' do %>
              All <%= plural_table_name.capitalize %>
              <%% end %>
            </div>
          </li>
        </ol>
      </nav>
      <h1 class="text-3xl font-medium tracking-tight text-gray-900">
        View <%= singular_table_name %>
      </h1>
    </div>
    <div class="mt-4 flex p-3">
      <%%= link_to "Edit <%= human_name %>", <%= edit_helper(type: :path) %>, class: 'form-button ml-2' %> 
      <%%= button_to "Delete <%= human_name %>", <%= model_resource_name(prefix: "@") %>, class: 'form-button-danger ml-2', method: :delete %>
    </div>
  </div>
</header>
<main class="mx-auto max-w-screen-lg  min-h-full px-4 sm:px-6 lg:px-8 animate-fadein">
  <dl class="divide-y divide-gray-100">
    <%- attributes.each do |attribute| -%>
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="font-medium leading-6 text-gray-900"><%= attribute.human_name %></dt>
        <dd class="mt-1  leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
          <%%= render partial: "shared/fields/<%= attribute.type %>/show", locals: { field: @<%= model_resource_name %>.<%= attribute.column_name %>, record: @<%= model_resource_name %>, resource: @<%= model_resource_name %>} %>
        </dd>
      </div>
    <%- end -%>
  </dl>
</main>
