<header class="shadow">
  <div class="mx-auto max-w-screen-lg- px-4 py-6 sm:px-6 lg:px-8 flex justify-between">
    <h1 class="text-3xl font-medium tracking-tight text-gray-900">
      <%= human_name.pluralize %>
    </h1>
    <div class="flex">
      <%%= link_to <%= new_helper(type: :path) %>, class: 'form-button ml-2' do %>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="w-6 h-6 -ml-2 -mt-1 inline-block"><path d="M10.75 6.75a.75.75 0 00-1.5 0v2.5h-2.5a.75.75 0 000 1.5h2.5v2.5a.75.75 0 001.5 0v-2.5h2.5a.75.75 0 000-1.5h-2.5v-2.5z"></path></svg>
      Add New <%= human_name %>
      <%% end %>
    </div>
  </div>
</header>
<div class="mx-auto max-w-screen-lg p-4 bg-gray-50 min-h-screen">
  <%% if  @<%= plural_table_name %>.any? %>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
    <div class="shadow rounded bg-white flex flex-col justify-between animate-fadein max-h-96 overflow-y-clip">
      <%%= render <%= singular_table_name %> %>
    </div>
    <%% end %>
  </div>
  <%% else %>
  <%%= link_to <%= new_helper(type: :path) %>, class:"text-center mt-10 py-16 px-24 w-fit rounded flex flex-col items-center content-center mx-auto border-dashed border-slate-400/50 border-2 rounded-xl bg-white/50 cursor-pointer active:outline-1 active:outline-offset-4 active:outline-green-600 hover:border-green-400  hover:bg-white" do %>
  <div class="">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.25" stroke="currentColor" class="mx-auto size-9 stroke-stone-600/50">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m3.75 9v6m3-3H9m1.5-12H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
    </svg>
    <h2 class="mt-4 mb-1 text-2xl tracking-tight font-normal text-slate-700">Add your first <%= singular_table_name %></h2>
    <p class="text-slate-400">Go ahead, let's get going.</p>
  </div>
  <%% end %>
  <%% end %>
</div>
