<%= form.fields_for field.attribute_name do |pf| %>
  <%= pf.select :value, field.options_for_select(record).map(&:to_global_id), { selected: field&.to_global_id, prompt: true }, { class: "form-select", data: { controller: "slimselect" } } %>
  <%= pf.hidden_field :type, value: "polymorphic" %>
<% end %>
